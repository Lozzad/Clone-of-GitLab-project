{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "es6", "dom" ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "es5",
        "types": [
            "aframe",
            "xstate",
            "three"
        ]
    },
    "include": [
        "src/**/*", "build/data.js"
    ]
}
